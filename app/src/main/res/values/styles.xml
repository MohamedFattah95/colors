<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black_effective</item>
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24px</item>
        <item name="android:fontFamily">@font/lite_font</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="primaryColor">@color/colorPrimary</item>
        <item name="primaryDarkColor">@color/colorPrimaryDark</item>
        <item name="accentColor">@color/colorAccent</item>
        <item name="secondaryColor">@color/colorPrimary</item>
        <item name="headlineTextColor">@color/colorPrimary</item>
        <item name="textColor">#000000</item>
        <item name="metaTextColor">#606060</item>
        <item name="bgColor">#ffffff</item>
        <item name="cardBg">#fafafa</item>
        <item name="gradientBg">@drawable/gradient_bg</item>
        <item name="app_logo">@mipmap/ic_launcher_foreground</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/black_effective</item>
        <item name="colorPrimaryDark">@color/bg_dark</item>
        <item name="colorAccent">#9575CD</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/black_effective</item>
        <item name="android:textColor">@color/black_effective</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">sans</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24px</item>
        <item name="android:fontFamily">@font/lite_font</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="primaryColor">@color/black_effective</item>
        <item name="primaryDarkColor">@color/bg_dark</item>
        <item name="accentColor">#9575CD</item>
        <item name="secondaryColor">@color/colorAccent</item>
        <item name="headlineTextColor">#9575CD</item>
        <item name="textColor">#ffffff</item>
        <item name="metaTextColor">#aeaeae</item>
        <item name="bgColor">@color/bg_dark</item>
        <item name="cardBg">@color/black_effective</item>
        <item name="gradientBg">@color/black_effective</item>
        <item name="app_logo">@mipmap/ic_launcher_foreground</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@color/white</item>
    </style>


    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
        <item name="fontPath">fonts/source-sans-pro/SourceSansPro-Regular.ttf</item>
    </style>


    <!-- Switch style -->
    <style name="SSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorGreen</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/colorGrayDark</item>
    </style>

    <style name="NavigationDrawerTextStyle">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>
</resources>
